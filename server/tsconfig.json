{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022", "DOM"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true, //함수파라미터 타입체크 강하게
    "strictBindCallApply": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ]
}
